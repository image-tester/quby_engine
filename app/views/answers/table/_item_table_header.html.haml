-if question.score_header != :none
  .options
    - question.options.each_with_index do |option, idx|
      -#TODO: if a hidden option is checked it should get its own new scale header
      - next if (option.inner_title or option.hidden)
      - cls = ['scaleheader']
      - cls << "last" if idx >= (question.options.size - 1)
      - cls << "optionwidth#{question.options.size}"
      .option{:title=> raw(option.description), :class => cls}
        = raw cycle("<br/>", "", :name => "headbr" ) 
        - case question.score_header 
        - when :value
          = option.value
        - when :description
          = raw option.description             
        
