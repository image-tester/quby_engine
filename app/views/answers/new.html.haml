%h1 
  Taking 
  = @answer.questionnaire.key

- semantic_form_for(@answer, :url => questionnaire_answers_path(@questionnaire)) do |form|
  - @answer.questionnaire.questions.each do |question|
    - case question.type
    - when :open
      = form.input question.key, :label => question.title, :as => :text, :value_method => :value
    - when :radio
      = form.input question.key, :label => question.title, :hint => question.description, :as => :radio, :collection => question.options, :label_method => :description, :value_method => :value
  
  = form.buttons