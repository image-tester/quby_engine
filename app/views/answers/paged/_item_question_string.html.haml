%ol.noindent
  %li{:class =>['string','question-item'], :id=>"answer_#{question.key}_input"}
    %label.main(for="answer_#{question.key}")= question.title
    .description-and-fields
      - unless question.description.blank?
        .description
          :markdown
            #{question.description}
      = text_field :answer, question.key, :autocomplete => question.autocomplete, :class => subquestion ? "subinput" : ""
