=marukufix(question.title, "answer_#{question.key}")
.description-and-fields
  .description
    - unless question.description.blank?
      :markdown
        #{raw question.description}
  .fields(id="answer_#{question.key}_input")
    = text_field :answer, question.day_key || "#{question.key}_dd",   :placeholder => "DD",   :size => 2, :autocomplete => question.autocomplete, :class => subquestion ? "subinput" : ""
    = "-"
    = text_field :answer, question.month_key || "#{question.key}_mm",   :placeholder => "MM",   :size => 2, :autocomplete => question.autocomplete, :class => subquestion ? "subinput" : ""
    = "-"
    = text_field :answer, question.year_key || "#{question.key}_yyyy", :placeholder => "JJJJ", :size => 4, :autocomplete => question.autocomplete, :class => subquestion ? "subinput" : ""

